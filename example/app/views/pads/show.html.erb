<h1><%= @pad_id %></h1>
<textarea id="pad"></textarea>

<script type="text/javascript">
var elem = document.getElementById('pad');
var url = "ws://<%= request.host_with_port %>/pads/share";
sharejs.open('pad-<%= @pad_id %>', 'text', url, function(error, doc) {
  doc.attach_textarea(elem);
});
</script>